<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:md="http://materialdesigninxaml.net/winfx/xaml/themes">
    <UniformGrid Rows="3" Width="32" Height="120" x:Key="ItineraryElementController" x:Shared="False"
                     HorizontalAlignment="Center" VerticalAlignment="Top">
        <Button Width="32" Height="32"
                    Command="{Binding RemoveElementCommand}"
                    Style="{StaticResource MaterialDesignFloatingActionButton}">
            <md:PackIcon Width="24" Height="24" Kind="Close" />
        </Button>

        <Button Width="32" Height="32"
                    Command="{Binding MoveUpElementCommand}"
                    Style="{StaticResource MaterialDesignFloatingActionButton}">
            <md:PackIcon Width="24" Height="24" Kind="ArrowUp" />
        </Button>

        <Button Width="32" Height="32"
                    Command="{Binding MoveDownElementCommand}"
                    Style="{StaticResource MaterialDesignFloatingActionButton}">
            <md:PackIcon Width="24" Height="24" Kind="ArrowDown" />
        </Button>
    </UniformGrid>
</ResourceDictionary>