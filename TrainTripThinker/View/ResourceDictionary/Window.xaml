<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:metro="http://metro.mahapps.com/winfx/xaml/controls">
    <Style x:Key="TttWindowStyle" TargetType="metro:MetroWindow">
        <Setter Property="TitleCaps" Value="False" />
        <Setter Property="BorderThickness" Value="1" />
        <Setter Property="GlowBrush" Value="{DynamicResource AccentColorBrush}" />
        <Setter Property="Width" Value="800" />
        <Setter Property="Height" Value="800" />
        <Setter Property="Title" Value="{Binding WindowTitle.Value}" />
    </Style>
</ResourceDictionary>