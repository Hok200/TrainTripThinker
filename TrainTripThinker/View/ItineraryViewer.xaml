<UserControl x:Class="TrainTripThinker.View.ItineraryViewer"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:TrainTripThinker.View"
             xmlns:dragablz="http://dragablz.net/winfx/xaml/dragablz"
             xmlns:data="clr-namespace:TrainTripThinker.Core.Data;assembly=TrainTripThinker.Core"
             mc:Ignorable="d" 
             DataContext="{StaticResource ItineraryViewModel}"
             d:DesignHeight="300" d:DesignWidth="300">
    <dragablz:TabablzControl ItemsSource="{Binding Itineraries}">
        <dragablz:TabablzControl.HeaderPrefixContent>
            <Button Content="Add" Command="{Binding AddItieraryCommand}" />
        </dragablz:TabablzControl.HeaderPrefixContent>
        <dragablz:TabablzControl.InterTabController>
            <dragablz:InterTabController />
        </dragablz:TabablzControl.InterTabController>

        <dragablz:TabablzControl.HeaderItemTemplate>
            <DataTemplate>
                <TextBlock Text="{Binding Title}" />
            </DataTemplate>
        </dragablz:TabablzControl.HeaderItemTemplate>

        <dragablz:TabablzControl.ContentTemplate>
            <DataTemplate>
                <ItemsControl ItemsSource="{Binding Elements}">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate DataType="data:TransportElement">
                            <TextBlock Text="{Binding Transport.Type}" />
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </DataTemplate>
        </dragablz:TabablzControl.ContentTemplate>
    </dragablz:TabablzControl>
</UserControl>
